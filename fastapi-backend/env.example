# Application Settings
SECRET_KEY=your_super_secret_key_here
DEBUG=true
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/myfastapi
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
CACHE_EXPIRE_SECONDS=300

# CORS
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Email Configuration (Zoho Mail)
SMTP_HOST=smtp.zoho.com
SMTP_PORT=587
SMTP_TLS=true
SMTP_SSL=false
SMTP_USER=your_email@yourdomain.com
SMTP_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=your_email@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET_NAME=your_s3_bucket_name
AWS_S3_REGION=us-west-2

# AWS Bedrock (Claude AI)
AWS_BEDROCK_ACCESS_KEY_ID=your_bedrock_access_key
AWS_BEDROCK_SECRET_ACCESS_KEY=your_bedrock_secret_key
AWS_BEDROCK_REGION=us-west-2
AWS_BEDROCK_REGION_FALLBACK=us-east-1

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Paystack (Optional)
PAYSTACK_SECRET_KEY=your_paystack_secret_key
TOKEN_PRICE=0.01

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600
LOGIN_RATE_LIMIT=5
REGISTRATION_RATE_LIMIT=3
PASSWORD_RESET_RATE_LIMIT=3

# Security
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=1800
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24

# Claude AI
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7
CLAUDE_DEFAULT_MODEL=anthropic.claude-3-5-sonnet-20241022-v2:0
CLAUDE_FALLBACK_MODEL=anthropic.claude-3-5-haiku-20241022-v1:0

# Memory & Context
MAX_MEMORY_ITEMS=10
MAX_PROJECT_KNOWLEDGE_TOKENS=160000

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s 